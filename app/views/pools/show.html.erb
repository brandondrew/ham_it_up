<%- model_class = Pool -%>
<div class="page-header">
  <h1><%=t '.title', :default => Pool %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:number) %></dt>
      <dd><pre class="prettyprint"><%= @pool.number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @pool.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:slug) %></dt>
      <dd><pre class="prettyprint"><%= @pool.slug %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source) %></dt>
      <dd><pre class="prettyprint"><%= @pool.source %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_trail) %></dt>
      <dd><pre class="prettyprint"><%= @pool.source_trail %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pools_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pool_path(@pool), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pool_path(@pool),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


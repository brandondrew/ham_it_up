<%= simple_form_for(@pool) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :description %>
    <%= f.input :slug %>
    <%= f.input :source %>
    <%= f.input :source_trail %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

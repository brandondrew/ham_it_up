<%= simple_form_for(@subelement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number %>
    <%= f.input :description %>
    <%= f.input :slug %>
    <%= f.association :pool %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
